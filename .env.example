# ========================
# Provider: OpenAI-compatible
# ========================

# Required
OPENAI_API_KEY=sk-your-key

# If using docker-compose with LiteLLM, use: http://litellm:4000/v1
# Default for desktop/local usage:
OPENAI_BASE_URL=https://0-0.pro/v1

# Text / reasoning models (OpenAI-compatible model IDs)
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_MODEL_PRO=gpt-4o
OPENAI_MODEL_VISION=gpt-4o

# Embeddings model
OPENAI_MODEL_EMBEDDINGS=text-embedding-3-small

# Optional modality-specific models (still via the same OpenAI-compatible provider)
OPENAI_MODEL_IMAGE=gpt-image-1
OPENAI_MODEL_AUDIO_TRANSCRIBE=whisper-1
OPENAI_MODEL_AUDIO_SPEECH=gpt-4o-mini-tts
OPENAI_MODEL_VIDEO=video-model-id

# ========================
# Workbench settings
# ========================
UI_ADMIN_TOKEN=admin

# Turn on/off risky tools requiring approval
REQUIRE_APPROVAL_SHELL=true
REQUIRE_APPROVAL_FS_WRITE=true
REQUIRE_APPROVAL_FS_DELETE=true
REQUIRE_APPROVAL_BROWSER_CLICK=true

# ========================
# UAK integration
# ========================
# Workbench should be able to use all UAK skills (core + optional).
UAK_SKILL_PROFILE_DEFAULT=all
